extends layout

block content
    h1 #{title}
    br
    form(method='POST', action='/articles/add')
      #form-group
        label Title: 
        input.form-control(name='title', type='text')
      br
      #form-group
        label Author: 
        input.form-control(name='author', type='text' value="Administrator")
      br
      #form-group
        label Body: 
        textarea.form-control(name='body')
      br
      input.btn.btn-primary.col-md-2(type='submit',value='Submit')
